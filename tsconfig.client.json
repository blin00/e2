{
    "compilerOptions": {
        "outDir": "./public/js/",
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": [
            "es2015", "dom"
        ]
    },
    "include": [
        "src/client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
